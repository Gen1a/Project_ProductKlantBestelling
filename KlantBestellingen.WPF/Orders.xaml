<Window x:Class="KlantBestellingen.WPF.Orders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KlantBestellingen.WPF"
        xmlns:languages="clr-namespace:KlantBestellingen.WPF.Languages"
        mc:Ignorable="d"
        Title="{x:Static languages:Translations.Orders}" Height="450" Width="800">
    <Grid>
        <!-- GRID DEFINITIONS -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition MaxWidth="150"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!-- FIRST ROW -->
        <DataGrid x:Name="DgBestellingen" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Margin="5" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                   AlternatingRowBackground="#FFB9BBFF" IsReadOnly="True" PreviewKeyDown="DgBestellingen_PreviewKeyDown" MouseDoubleClick="Row_Bestelling_DoubleClick">
            <DataGrid.Columns>
                <!-- Get column header translation + bind Bestelling properties to column -->
                <DataGridTextColumn Header="{x:Static languages:Translations.OrderId}" Binding="{Binding BestellingId}" MaxWidth="150"></DataGridTextColumn>
                <DataGridTextColumn Header="{x:Static languages:Translations.Time}" Binding="{Binding Datum}" Width="Auto"></DataGridTextColumn>
                <DataGridTextColumn Header="{x:Static languages:Translations.CustomerName}" Binding="{Binding Path=Klant.Naam}" MinWidth="150" MaxWidth="200"></DataGridTextColumn>
                <DataGridTextColumn Header="{x:Static languages:Translations.Price}" Binding="{Binding PrijsBetaald}" MinWidth="100" MaxWidth="150"></DataGridTextColumn>
                <DataGridTextColumn Header="{x:Static languages:Translations.Paid}" Binding="{Binding Betaald}" MinWidth="50" MaxWidth="100"></DataGridTextColumn>
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="{x:Static languages:Translations.Delete}" Click="DeleteButton_Click" Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
